<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.jakevossen.apollotrivia.MainActivity">


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="495dp"
        android:layout_margin="16dp"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/question" />

        <RadioGroup
            android:id="@+id/answersRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/question"
            android:layout_marginTop="11dp"
            android:paddingLeft="10dp">

            <RadioButton
                android:id="@+id/answer0RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer0" />

            <RadioButton
                android:id="@+id/answer1RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer1" />

            <RadioButton
                android:id="@+id/answer2RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer2" />

            <RadioButton
                android:id="@+id/answer3RadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer3" />

        </RadioGroup>

        <Button
            android:id="@+id/sumbitGenButton"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answersRadioGroup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:layout_weight="1"
            android:onClick="submitGenButton"
            android:text="Submit" />

        <TextView
            android:id="@+id/streakCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/streakTitle"
            android:layout_alignStart="@+id/streakTitle"
            android:layout_below="@+id/streakTitle"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:text="0"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/streakTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/sumbitGenButton"
            android:layout_alignStart="@+id/sumbitGenButton"
            android:layout_below="@+id/sumbitGenButton"
            android:text="Current Streak" />

        <TextView
            android:id="@+id/answerFracTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correct/Total"
            android:layout_below="@+id/sumbitGenButton"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/answerFracValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/0"
            android:textSize="42sp"
            android:layout_below="@+id/answerFracTitle"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/correctPercentageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Percentage"
            android:layout_below="@+id/sumbitGenButton"
            android:layout_alignRight="@+id/sumbitGenButton"
            android:layout_alignEnd="@+id/sumbitGenButton" />

        <TextView
            android:id="@+id/correctPercentageValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0%"
            android:textSize="42sp"
            android:layout_below="@+id/correctPercentageTitle"
            android:layout_alignRight="@+id/correctPercentageTitle"
            android:layout_alignEnd="@+id/correctPercentageTitle" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
